/**
 * Page callbac, form amcr menu item
 */
function amcr_test_page() {
  try {
    $report_config = new AmcrReportConfig(2);
    $data_source = new AmcrReport($report_config);
    $data_source->getData();
    $data_source->save();
  }
  catch (Exception $e) {
    watchdog_exception('amcr', $e);
    return $e->getMessage();
  }

  return 'Report completed';

}


