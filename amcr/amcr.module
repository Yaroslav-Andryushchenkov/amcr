/**
 * Loads a report config.
 *
 * @param $id
 *   The report id.
 *
 * @return
 *   A report config object.
 */
function amcr_report_load($id) {
  $reports = &drupal_static(__FUNCTION__);
  if (!isset($reports[$id])) {
    $report_config = new AmcrReportConfig(NULL);
    $report_config->load($id);
    $reports[$id] = $report_config;
  }
  return $reports[$id];
}


